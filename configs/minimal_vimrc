set nocompatible
syntax on
filetype plugin indent on
set showmatch
set ignorecase
set smartcase
set incsearch
set hlsearch
set hidden

set number
set scrolloff=10
set cursorline

set tabstop=2
set softtabstop=2
set shiftwidth=2
set expandtab
set autoindent
set smartindent

inoremap jj <Esc>
cnoremap jj <C-C>
nnoremap k gk
nnoremap j gj

" Hide hilights from hlsearch
nnoremap <silent> <C-H> :nohl<CR>
